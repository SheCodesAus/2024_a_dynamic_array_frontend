function SearchForm() {
    const [q, setQ] = useState(""); // set search query to empty string
    const [searchParam] = useState(["tags", "industries", "country", "state", "city"])



    return (
        <section className="search-form-container">

            <IndustrySelect></IndustrySelect>
            <FilterResults q={q} searchParam={searchParam}></FilterResults>
            <ProfileCards></ProfileCards>
        </section>
    );
}
export default SearchForm;


